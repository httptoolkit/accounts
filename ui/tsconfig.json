{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../dist/public",
        "sourceMap": true,

        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "incremental": true,

        "plugins": [
          { "name": "typescript-styled-plugin" }
        ]
    },
    "files": [
      "src/index.tsx"
    ],
    "include": [
      "custom-typings/**/*.d.ts",
    ]
}
